<Window x:Class="BasicTextEditorDev.AddHyperlink"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BasicTextEditorDev"
        mc:Ignorable="d"
        Title="Add Hyperlink" Height="135" Width="300">
    <Grid>
        <Label
            x:Name="LabelHL"
            Content="Hyperlink:"
            HorizontalAlignment="Left"
            Margin="10,10,0,0"
            VerticalAlignment="Top" />
        <TextBox
            x:Name="TextBoxHyperlink"
            Height="23"
            Margin="10,40,10,0"
            TextWrapping="Wrap"
            VerticalAlignment="Top" />
        <Button
            x:Name="ButtonOK"
            Content="OK"
            HorizontalAlignment="Center"
            Margin="0,0,85,10"
            VerticalAlignment="Bottom"
            Width="75"
            Click="ButtonOK_Click" />
        <Button
            x:Name="ButtonCancel"
            Content="Cancel"
            HorizontalAlignment="Center"
            Margin="85,0,0,10"
            VerticalAlignment="Bottom"
            Width="75"
            Click="ButtonCancel_Click" />

    </Grid>
</Window>
